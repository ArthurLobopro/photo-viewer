{
  "name": "photo-viewer",
  "appname": "Visualizador de Fotos",
  "version": "1.0.0",
  "description": "Visualizador de fotos simples",
  "main": "./electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArthurLobopro/photo-viewer.git"
  },
  "keywords": [],
  "author": "Arthur Lobo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArthurLobopro/photo-viewer/issues"
  },
  "homepage": "https://github.com/ArthurLobopro/photo-viewer#readme",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "electron": "^13.1.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Visualizador de Fotos",
        "icon": "build/icon",
        "ignore":[
          ".gitignore", "build"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "photo_viewer",
            "setupExe": "${name}-${version}-setup.exe",
            "setupIcon": "./build/icon.ico",
            "iconURL": "./build/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
